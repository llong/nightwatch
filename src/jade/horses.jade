ng-include(src="'assets/partials/navbar.html'")

.container(style="max-width:40rem")
    
    .card
      .spinner(ng-show="horse.loadingHorse == true") &nbsp; Loading Horses
      
      div.horse-row.fade(ng-repeat="horse in horse.horses")
        div(style="width:2.5rem")
          .avatar(style="background-image:url({{horse.thumbnail_url}})")
        div(style="vertical-align:middle" ng-click="viewHorse($index)")
          span(ng-bind="horse.registered_name") 
          div(ng-bind="horse.nick_name").text-muted
        div.text-right
          a.nw-keyboard_arrow_right(href="#/horses/horse/{{$index}}")
    
      .row.clearfix
        .col.col-5-of-12.m-t-1.float-right
          a.btn.success.stretch(href="#/horses/new") Add new horse
