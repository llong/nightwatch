ng-include(src="'assets/partials/navbar.html'")

.container(style="max-width:40rem")

    .card
      .spinner(ng-show="horse.loading == true") &nbsp; Loading Horses
      
    
      div.horse-row(ng-repeat="horse in horse.horses")
        div(style="width:2.5rem")
          .avatar(style="background-image:url({{horse.thumbnail_url}})")
        div(style="vertical-align:middle")
          span(ng-bind="horse.registered_name") 
          .text-muted(ng-bind="horse.nick_name" ng-show="horse.nick_name.length")
        div.text-right
          a.nw-keyboard_arrow_right(href="#/horses/{{$index}}")
    
